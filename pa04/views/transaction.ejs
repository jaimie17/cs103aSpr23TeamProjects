<h1>Transactions by <%= user.username %> </h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                <a class="btn btn-primary" href="/transaction/groupByCategory" role="button">Group by Category</a>
            </th>
            <th>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sort by
                    </button>
                    <div class="dropdown-menu" aria-labelledby="sortDropdown">
                        <a class="dropdown-item" href="?sort=category">Category</a>
                        <a class="dropdown-item" href="?sort=amount">Amount</a>
                        <a class="dropdown-item" href="?sort=description">Description</a>
                        <a class="dropdown-item" href="?sort=date">Date</a>
                    </div>
                </div>
            </th>
        </tr>
    </thead>
</table>
<table class="table table-bordered table-striped">
    <thead class="thead-dark sticky-top">
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Date</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach((item, index) => { %>
        <tr class="<%= index % 2 === 0 ? 'even' : 'odd' %>">
               <td> <%= item.description %> </td>
               <td> <%= item.amount %> </td>
               <td> <%= item.category %> </td>
               <td> <%= item.date %> </td>
               <td> <a href="/transaction/remove/<%= item._id %>"><i class="bi bi-trash"></i></a> </td>
               <td> <a href="/transaction/edit/<%= item._id %>"><i class="bi bi-pencil-square"></i></a> </td>
            </tr>
            
            <% }); %>
    </tbody>
</table>
